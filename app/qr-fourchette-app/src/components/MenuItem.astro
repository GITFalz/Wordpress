---
const { menu } = Astro.props;
const apiBase = import.meta.env.PUBLIC_API_BASE_URL;
---

<div data-id={menu.id} id={`menu-${menu.id}`} class="flex items-start px-4 py-3 cursor-pointer menu-item" draggable="true">
    <!-- Left side: index circle with plus button below -->
    <div class="flex flex-col items-center mr-4 select-none rounded-xl">
        <div class="cursor-move w-11 h-11 rounded-full bg-gray-900 hover:bg-gray-800 text-white flex items-center justify-center transition drag-handle">
        <p>{menu.number}</p>
        <!-- Move icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrows-move" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M7.646.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 1.707V5.5a.5.5 0 0 1-1 0V1.707L6.354 2.854a.5.5 0 1 1-.708-.708zM8 10a.5.5 0 0 1 .5.5v3.793l1.146-1.147a.5.5 0 0 1 .708.708l-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 0 1 .708-.708L7.5 14.293V10.5A.5.5 0 0 1 8 10M.146 8.354a.5.5 0 0 1 0-.708l2-2a.5.5 0 1 1 .708.708L1.707 7.5H5.5a.5.5 0 0 1 0 1H1.707l1.147 1.146a.5.5 0 0 1-.708.708zM10 8a.5.5 0 0 1 .5-.5h3.793l-1.147-1.146a.5.5 0 0 1 .708-.708l2 2a.5.5 0 0 1 0 .708l-2 2a.5.5 0 0 1-.708-.708L14.293 8.5H10.5A.5.5 0 0 1 10 8"/>
            </svg>
        </div>
        <button
            type="button"
            aria-label="Add"
            class="expand-menu-item mt-2 w-8 h-8 rounded-full bg-orange-400 hover:bg-orange-300 text-white transition focus:outline-none focus:ring-2 focus:ring-orange-400 toggle-menu-button"
        >
            <div class="flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                </svg>
            </div>
        </button>
        <button
            type="button"
            aria-label="Add"
            class="hidden collapse-menu-item mt-2 w-8 h-8 rounded-full bg-orange-400 hover:bg-orange-300 text-white transition focus:outline-none focus:ring-2 focus:ring-orange-400 toggle-menu-button"
        >
            <div class="flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-up" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M7.646 2.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 3.707 2.354 9.354a.5.5 0 1 1-.708-.708z"/>
                    <path fill-rule="evenodd" d="M7.646 6.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 7.707l-5.646 5.647a.5.5 0 0 1-.708-.708z"/>
                </svg>
            </div>
        </button>     
    </div>

    <!-- Right side: name and action buttons -->
    <div class="flex flex-col flex-grow">
        <div class="flex items-start justify-between flex-col space-y-2">
            <p class="hidden expandable">Nom du menu</p>
            <input
                type="text"
                name="name"
                hx-put={`${apiBase}/api/menu/name/${menu.id}`}
                hx-trigger="change delay:500ms"
                hx-target="this"
                hx-swap="none"
                hx-headers='{"Content-Type":"application/json"}'
                hx-ext="json-enc"
                placeholder="Menu name"
                class="rounded-md p-2 focus:outline-none focus:ring-2 bg-gray-100 h-11 w-full"
                value={menu.name}
            />
            <div class="hidden expandable menu-large w-full space-y-2">
                <p>Description du menu</p>
                <textarea
                    name="description"
                    hx-put={`${apiBase}/api/menu/description/${menu.id}`}
                    hx-trigger="change delay:500ms"
                    hx-target="this"
                    hx-swap="none"
                    hx-headers='{"Content-Type":"application/json"}'
                    hx-ext="json-enc"
                    placeholder="Menu description"
                    class="rounded-md p-2 focus:outline-none focus:ring-2 bg-gray-100 h-32 w-full"
                >{menu.description}</textarea>

                <div class="flex flex-row space-x-2">
                    <div class="w-full space-y-2 flex flex-col">
                        <p>Entr√©es / Boissons du menu</p>
                        <textarea
                            name="entrees"
                            hx-put={`${apiBase}/api/menu/entrees/${menu.id}`}
                            hx-trigger="change delay:500ms"
                            hx-target="this"
                            hx-swap="none"
                            hx-headers='{"Content-Type":"application/json"}'
                            hx-ext="json-enc"
                            placeholder="Menu entrees"
                            class="rounded-md p-2 focus:outline-none focus:ring-2 bg-gray-100 h-32 w-full"
                        >{menu.entrees}</textarea>
                    </div>
                    
                    <div class="w-full space-y-2 flex flex-col">
                        <p>Plats du menu</p>
                        <textarea
                            name="plats"
                            hx-put={`${apiBase}/api/menu/plats/${menu.id}`}
                            hx-trigger="change delay:500ms"
                            hx-target="this"
                            hx-swap="none"
                            hx-headers='{"Content-Type":"application/json"}'
                            hx-ext="json-enc"
                            placeholder="Menu plats"
                            class="rounded-md p-2 focus:outline-none focus:ring-2 bg-gray-100 h-32 w-full"
                        >{menu.plats}</textarea>
                    </div>
                    <div class="w-full space-y-2 flex flex-col">
                        <p>Dessert du menu</p>
                        <textarea
                            name="desserts"
                            hx-put={`${apiBase}/api/menu/desserts/${menu.id}`}
                            hx-trigger="change delay:500ms"
                            hx-target="this"
                            hx-swap="none"
                            hx-headers='{"Content-Type":"application/json"}'
                            hx-ext="json-enc"
                            placeholder="Menu desserts"
                            class="rounded-md p-2 focus:outline-none focus:ring-2 bg-gray-100 h-32 w-full"
                        >{menu.desserts}</textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons with horizontal line behind -->
        <div class="relative mt-4 flex items-center justify-center">
            <!-- The horizontal gray bar behind the buttons -->
            <div class="absolute inset-x-0 top-1/2 -translate-y-1/2 border-t border-gray-300"></div>

            <!-- Buttons container -->
            <div class="flex space-x-4 z-10">
                <button
                    hx-get={`/partials/edit/menu/add-menu-item?after=${menu.id}`}
                    hx-target={`#menu-${menu.id}`}
                    hx-swap="afterend"
                    type="button"
                    aria-label="Add submenu"
                    class="w-8 h-8 rounded-full bg-gray-900 hover:bg-gray-800 text-white flex items-center justify-center transition focus:outline-none focus:ring-2 focus:ring-orange-400"
                    >
                    <!-- Plus icon -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        class="bi bi-plus"
                        viewBox="0 0 16 16"
                    >
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                </button>
                <button
                    hx-delete={`${apiBase}/api/menu/${menu.id}`}
                    hx-target={`#menu-${menu.id}`}
                    hx-swap="outerHTML"
                    type="button"
                    aria-label="Delete menu"
                    class="w-8 h-8 rounded-full bg-gray-900 hover:bg-gray-800 text-white flex items-center justify-center transition focus:outline-none focus:ring-2 focus:ring-red-400 delete-menu-button"
                    >
                <!-- Trashcan icon -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 0a1 1 0 00-1 1v1h6V4a1 1 0 00-1-1m-4 0h4"
                        />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>