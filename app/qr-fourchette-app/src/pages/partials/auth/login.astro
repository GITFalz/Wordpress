---
// login.astro
const apiBase = import.meta.env.PUBLIC_API_BASE_URL;
---
<form
    id="login-form"
    hx-post={`${apiBase}/api/login`}
    hx-swap="none"
    class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 space-y-4"
    >
    <h2 class="text-xl font-bold text-center mb-4">Login</h2>

    <div class="space-y-2">
        <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
        <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
        <p data-role="form-error" class="text-red-600 text-sm hidden"></p>
    </div>

    <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition"
    >
        Log In
    </button>
</form>